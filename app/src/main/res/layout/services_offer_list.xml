<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/imvCheckPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_baseline_check_circle_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/tvServiceText"
        app:layout_constraintEnd_toStartOf="@+id/tvServiceText"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvServiceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:padding="12dp"
        android:text=" "
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/viewLineBelow"
        app:layout_constraintStart_toEndOf="@id/imvCheckPlan"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/viewLineBelow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="29dp"
        android:background="@color/dark_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvServiceText" />

</androidx.constraintlayout.widget.ConstraintLayout>