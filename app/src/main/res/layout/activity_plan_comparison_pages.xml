                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeText"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeText"
                app:layout_constraintTop_toBottomOf="@id/tvRebalancingPFCompText" />

            <TextView
                android:id="@+id/tvReviewFrequencyCompVal1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="✔"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvReviewFrequencyCompText"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeCompVal1"
