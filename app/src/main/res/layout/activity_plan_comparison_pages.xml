                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeText"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeText"
                app:layout_constraintTop_toBottomOf="@id/tvPlanTypeText" />

            <TextView
                android:id="@+id/tvFinancialPlanningCompVal1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="*"
                android:background="@color/light_grey"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvFinancialPlanningCompText"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvPlanTypeCompVal1" />

            <TextView
                android:id="@+id/tvFinancialPlanningCompVal2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="0"
                android:background="@color/light_grey"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvFinancialPlanningCompText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvPlanTypeCompVal2" />

            <TextView
                android:id="@+id/tvPrivateWealthCompText"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:padding="20dp"
                android:text="Private Wealth Management"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeText"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeText"
                app:layout_constraintTop_toBottomOf="@id/tvFinancialPlanningCompText" />

            <TextView
                android:id="@+id/tvPrivateWealthCompVal1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="X"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvPrivateWealthCompText"
                app:layout_constraintEnd_toEndOf="@id/tvFinancialPlanningCompVal1"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvFinancialPlanningCompVal1" />

            <TextView
                android:id="@+id/tvPrivateWealthCompVal2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="Y"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvPrivateWealthCompText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvFinancialPlanningCompVal2" />

            <TextView
