                android:layout_width="0dp"
                android:layout_height="100dp"
                android:padding="20dp"
                android:text="Risk Management"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeText"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeText"
                app:layout_constraintTop_toBottomOf="@id/tvPrivateWealthCompText" />

            <TextView
                android:id="@+id/tvRiskManageCompVal1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="X"
                android:background="@color/light_grey"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvRiskManageComp"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvPrivateWealthCompVal1" />

            <TextView
                android:id="@+id/tvRiskManageCompVal2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="X"
                android:background="@color/light_grey"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvRiskManageComp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvPrivateWealthCompVal2" />


            <TextView
                android:id="@+id/tvTaxFilingText"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:padding="20dp"
                android:text="Tax Filing"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeText"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeText"
                app:layout_constraintTop_toBottomOf="@id/tvRiskManageComp" />

            <TextView
                android:id="@+id/tvTaxFilingVal1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="X"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvTaxFilingText"
                app:layout_constraintEnd_toEndOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintStart_toStartOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvRiskManageCompVal1" />

            <TextView
                android:id="@+id/tvTaxFilingVal2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="X"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvTaxFilingText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPlanTypeCompVal1"
                app:layout_constraintTop_toBottomOf="@id/tvRiskManageCompVal2" />

            <!--    Chat with expert-->

            <TextView
                android:id="@+id/tvRebalancingPFCompText"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:padding="20dp"
