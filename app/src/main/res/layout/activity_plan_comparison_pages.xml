                android:layout_width="0dp"
                android:layout_height="100dp"
                android:padding="20dp"
                android:text="Plan Type"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.40" />

            <TextView
                android:id="@+id/tvPlanTypeCompVal1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
                android:text="Robo Advisory"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlanTypeText"
                app:layout_constraintStart_toEndOf="@id/tvPlanTypeText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.30" />

            <TextView
                android:id="@+id/tvPlanTypeCompVal2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="20dp"
