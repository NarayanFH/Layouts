<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanComparisonPages">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/dg_color"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/imvUpperBackground"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/teal"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <TextView
        android:id="@+id/tvCol1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Zero commissions on \nofferings"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imvUpperBackground" />

    <View
        android:id="@+id/viewAfterZeroCommissionText"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imvUpperBackground"
        app:layout_constraintStart_toEndOf="@id/tvCol1"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tvPlanName1Comp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="BASIC"
        android:textColor="@color/l_green"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/viewAfterZeroCommissionText"
        app:layout_constraintTop_toTopOf="@id/imvUpperBackground" />

    <TextView
        android:id="@+id/tvPlanPrice1Comp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="$ 99"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/viewAfterZeroCommissionText"
        app:layout_constraintTop_toBottomOf="@id/tvPlanName1Comp" />

    <TextView
        android:id="@+id/tvPriceComp1Duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:text="Per Month"
        android:textColor="@color/l_green"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/tvPlanPrice1Comp"
        app:layout_constraintStart_toEndOf="@+id/tvPlanPrice1Comp"
        app:layout_constraintTop_toTopOf="@+id/tvPlanPrice1Comp" />

    <View
        android:id="@+id/viewBelowPriceComp1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tvPriceComp1Duration"
        app:layout_constraintStart_toStartOf="@id/tvPlanPrice1Comp"
        app:layout_constraintTop_toBottomOf="@id/tvPlanPrice1Comp" />

    <TextView
        android:id="@+id/tvBilledDurationComp1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Billed Half Yearly"
        android:textColor="@color/green_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvPlanPrice1Comp"
        app:layout_constraintTop_toBottomOf="@+id/viewBelowPriceComp1" />

    <View
        android:id="@+id/viewComp1Text"
        android:layout_width="0.8dp"

        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imvUpperBackground"
        app:layout_constraintStart_toEndOf="@id/viewBelowPriceComp1"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tvPlanName2Comp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="BASIC PRO"
        android:textColor="@color/l_green"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewComp1Text"
        app:layout_constraintTop_toTopOf="@id/imvUpperBackground" />

    <TextView
        android:id="@+id/tvPlanPrice2Comp"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="$ 249"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvPlanName2Comp"
        app:layout_constraintTop_toBottomOf="@id/tvPlanName2Comp" />

    <TextView
        android:id="@+id/tvPriceComp2Duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:text="Per Month"
        android:textColor="@color/l_green"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/tvPlanPrice2Comp"
        app:layout_constraintStart_toEndOf="@+id/tvPlanPrice2Comp"
        app:layout_constraintTop_toTopOf="@+id/tvPlanPrice2Comp" />

    <View
        android:id="@+id/viewBelowPriceComp2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tvPriceComp2Duration"
        app:layout_constraintStart_toStartOf="@id/tvPlanPrice2Comp"
        app:layout_constraintTop_toBottomOf="@id/tvPlanPrice2Comp" />

    <TextView
        android:id="@+id/tvBilledDurationComp2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Billed Half Yearly"
        android:textColor="@color/green_grey"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvPlanPrice2Comp"
        app:layout_constraintTop_toBottomOf="@+id/viewBelowPriceComp2" />


    <ImageView
        android:id="@+id/imvZeroPlan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewAfterZeroCommissionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imvUpperBackground"
        app:layout_constraintWidth_percent="0.40" />

