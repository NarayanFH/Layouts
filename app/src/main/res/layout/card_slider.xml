<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvServiceOffer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="43dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/l_green"
        app:cardCornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middleCardConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvServiceOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Services We Offer"
                android:textColor="@color/teal"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFinancialPlanning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:padding="16dp"
                android:text="Financial Planning"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/imvCheckFinancialPlan"
                app:layout_constraintTop_toBottomOf="@id/tvServiceOffer" />

            <ImageView

                android:id="@+id/imvCheckFinancialPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_check_circle_outline_24"
                app:layout_constraintBottom_toBottomOf="@+id/tvFinancialPlanning"
                app:layout_constraintEnd_toStartOf="@+id/tvFinancialPlanning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvFinancialPlanning" />

            <View

                android:id="@+id/viewLineFinancialPlanning"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="29dp"
                android:background="@color/dark_green"
                app:layout_constraintStart_toStartOf="@id/imvCheckFinancialPlan"
                app:layout_constraintTop_toBottomOf="@+id/tvFinancialPlanning" />

            <TextView
                android:id="@+id/tvPrivateWealthManagement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:padding="16dp"
                android:text="Private Wealth Management"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/imvCheckFinancialPlan"
                app:layout_constraintTop_toBottomOf="@id/viewLineFinancialPlanning" />

            <ImageView
                android:id="@+id/imvWealthInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_info_24_plain"
                android:visibility="gone"

                app:layout_constraintBottom_toBottomOf="@+id/tvPrivateWealthManagement"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPrivateWealthManagement"
                app:layout_constraintTop_toTopOf="@id/tvPrivateWealthManagement" />

            <ImageView
                android:id="@+id/imvCheckPrivateWealthPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_check_circle_outline_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tvPrivateWealthManagement"
                app:layout_constraintEnd_toStartOf="@+id/tvPrivateWealthManagement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvPrivateWealthManagement" />

            <View
                android:id="@+id/viewLinePrivateWealth"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="29dp"
                android:background="@color/dark_green"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/imvCheckPrivateWealthPlan"
                app:layout_constraintTop_toBottomOf="@+id/tvPrivateWealthManagement" />


